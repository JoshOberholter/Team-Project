public class Comment extends Message {
    int likes;
    int dislikes;

    public Comment(User user, String message) {
        super(user, message);
        this.likes = 0;
        this.dislikes = 0;
    }

    public int getLikes() {
        return likes;
    }

    public void setLikes(int likes) {
        this.likes = likes;
    }

    public int getDislikes() {
        return dislikes;
    }

    public void setDislikes(int dislikes) {
        this.dislikes = dislikes;
    }

    @Override
    public boolean equals(Object o) {
        if (o instanceof Comment) {
            Comment msg = (Comment)o;
            return (msg.getUser().equals(this.getUser()) && msg.getMessage().equals(this.getMessage()) && 
                    msg.getDate() == this.getDate() && msg.likes == this.likes && msg.dislikes == this.dislikes);
        }
        return false;
    }
}
